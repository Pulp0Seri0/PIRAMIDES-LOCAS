def UP(n):
    i = -1
    j = 0
    while i < n:
        i+=1
        j=((n-i)*2)-1
        UP = print(" "*i, "#"*j)
    return UP
    
        
def DOWN(m):
    i = 0
    j = 0
    while i < m:
        i+=1
        j=((m-i)*2)-1
    while i > 0:
        i-=1
        j=((m-i)*2)-1
        DOWN = print(" "*i, "#"*j)
    return DOWN
    
        
def PIRAMIDES(n, m):
    print("------------------------------")
    PIRAMIDE_DE_ARRIBA = UP(n)
    print("------------------------------")
    PIRAMIDE_DE_ABAJO = DOWN(m)
    print("------------------------------")
    return PIRAMIDE_DE_ARRIBA 
    return PIRAMIDE_DE_ABAJO

